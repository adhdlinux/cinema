<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_focused="true">
        <shape android:padding="10dp" android:shape="rectangle">
            <solid android:color="@color/colorhightlight"/>
            <stroke android:width="2dp" android:color="#ffa0a496"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:padding="10dp" android:shape="rectangle">
            <solid android:color="@color/colorhightlight"/>
        </shape>
    </item>
    <item android:state_focused="false">
        <shape android:padding="10dp" android:shape="rectangle">
            <solid android:color="@color/colorAccent"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:padding="10dp" android:shape="rectangle">
            <solid android:color="@color/colorAccent"/>
        </shape>
    </item>
    <item android:state_hovered="true">
        <shape android:padding="10dp" android:shape="rectangle">
            <solid android:color="@color/colorhightlight"/>
            <stroke android:width="2dp" android:color="#ffa0a496"/>
        </shape>
    </item>
</selector>
