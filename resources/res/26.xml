            </FrameLayout>
            <ProgressBar android:layout_gravity="center" android:id="@+id/player_buffering" android:focusable="false" android:focusableInTouchMode="false" android:visibility="gone" android:clickable="false" android:layout_width="96dp" android:layout_height="96dp" android:indeterminate="true" android:indeterminateTint="@color/colorAccent" android:indeterminateTintMode="src_atop" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toTopOf="0"/>
            <androidx.constraintlayout.widget.ConstraintLayout android:gravity="center" android:layout_gravity="center" android:orientation="horizontal" android:id="@+id/player_center_menu" android:layout_width="match_parent" android:layout_height="100dp" android:layoutDirection="ltr" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toTopOf="0">
                <FrameLayout android:layout_gravity="left|center_vertical|center_horizontal|center|start" android:id="@+id/player_rew_holder" android:layout_width="0dp" android:layout_height="wrap_content" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toLeftOf="@+id/player_ffwd_holder" app:layout_constraintTop_toTopOf="0" app:layout_constraintWidth_percent="0.5">
                    <TextView android:textSize="19sp" android:textStyle="bold" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center" android:id="@+id/exo_rew_text" android:layout_width="200dp" android:layout_height="40dp"/>
                    <ImageButton android:layout_gravity="center" android:id="@+id/exo_rew" android:background="@drawable/player_btn_rounded_corner" android:padding="10dp" android:nextFocusRight="@+id/exo_play_pause" android:nextFocusUp="@+id/player_go_back" android:layout_width="70dp" android:layout_height="70dp" android:src="@drawable/forward" android:scaleType="fitCenter" android:tintMode="src_in" app:rewind_icon="@drawable/forward" app:tint="@color/white"/>
                </FrameLayout>
                <FrameLayout android:id="@+id/player_pause_play_holder_holder" android:layout_width="100dp" android:layout_height="100dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toTopOf="0">
                    <ImageButton android:layout_gravity="center" android:id="@+id/exo_play_pause" android:background="@drawable/player_btn_rounded_corner" android:nextFocusRight="@+id/exo_ffwd" android:nextFocusUp="@+id/player_go_back" android:layout_width="96dp" android:layout_height="96dp" android:src="@drawable/pause" app:tint="@color/white"/>
                </FrameLayout>
                <FrameLayout android:layout_gravity="right|center_vertical|center_horizontal|center|end" android:id="@+id/player_ffwd_holder" android:layout_width="0dp" android:layout_height="wrap_content" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toRightOf="@+id/player_rew_holder" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toTopOf="0" app:layout_constraintWidth_percent="0.5">
                    <TextView android:textSize="19sp" android:textStyle="bold" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center" android:id="@+id/exo_ffwd_text" android:layout_width="200dp" android:layout_height="40dp"/>
                    <ImageButton android:layout_gravity="center" android:id="@+id/exo_ffwd" android:background="@drawable/player_btn_rounded_corner" android:padding="10dp" android:nextFocusUp="@+id/player_go_back" android:layout_width="70dp" android:layout_height="70dp" android:src="@drawable/forward" android:scaleType="fitCenter" android:tintMode="src_in" app:tint="@color/white"/>
                </FrameLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout android:gravity="center" android:layout_gravity="bottom" android:orientation="horizontal" android:paddingTop="4dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="20dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0">
                <ImageButton android:id="@+id/exo_prev" android:tintMode="src_in" app:tint="?attr/colorPrimaryDark" style="@style/ExoMediaButton.Previous"/>
                <ImageButton android:id="@+id/exo_repeat_toggle" android:tintMode="src_in" app:tint="?attr/colorPrimaryDark" style="@style/ExoMediaButton"/>
                <ImageButton android:id="@+id/exo_next" android:tintMode="src_in" app:tint="?attr/colorPrimaryDark" style="@style/ExoMediaButton.Next"/>
                <ImageButton android:id="@+id/exo_vr" android:tintMode="src_in" app:tint="?attr/colorPrimaryDark" style="@style/ExoMediaButton.VR"/>
                <ImageButton android:id="@+id/exo_play" android:background="@drawable/rounded_corner" android:layout_width="0dp" android:layout_height="0dp" android:tintMode="src_in" app:tint="?attr/colorPrimaryDark"/>
                <ImageButton android:id="@+id/exo_pause" android:layout_width="0dp" android:layout_height="0dp" android:tintMode="src_in" app:tint="?attr/colorPrimaryDark"/>
            </LinearLayout>
            <FrameLayout android:id="@+id/subtitle_holder" android:layout_width="match_parent" android:layout_height="match_parent"/>
            <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:id="@+id/bottom_player_bar" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0">
                <androidx.constraintlayout.widget.ConstraintLayout android:orientation="horizontal" android:id="@+id/player_video_bar" android:layout_width="match_parent" android:layout_height="wrap_content" android:layoutDirection="ltr">
                    <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="@android:color/white" android:gravity="right|center_vertical|center_horizontal|center|end" android:layout_gravity="center" android:id="@+id/exo_position" android:paddingLeft="4dp" android:paddingRight="4dp" android:focusable="false" android:layout_width="wrap_content" android:layout_height="30dp" android:minWidth="50dp" android:includeFontPadding="false" android:layout_marginStart="20dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintStart_toStartOf="0"/>
                    <com.github.rubensousa.previewseekbar.media3.PreviewTimeBar android:id="@+id/exo_progress" android:nextFocusUp="@+id/exo_play_pause" android:nextFocusDown="@+id/player_lock_holder" android:layout_width="0dp" android:layout_height="30dp" android:foreground="@color/transparent" android:layout_weight="1" app:bar_height="2dp" app:layout_constraintBottom_toBottomOf="@+id/exo_position" app:layout_constraintEnd_toStartOf="@+id/exo_duration" app:layout_constraintStart_toEndOf="@+id/exo_position" app:played_color="@color/colorAccent" app:scrubber_color="@color/colorAccent" app:scrubber_dragged_size="26dp" app:scrubber_enabled_size="24dp" app:unplayed_color="@color/white"/>
                    <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="@android:color/white" android:layout_gravity="center" android:id="@+id/exo_duration" android:paddingLeft="4dp" android:paddingRight="4dp" android:focusable="false" android:layout_width="wrap_content" android:layout_height="30dp" android:minWidth="50dp" android:includeFontPadding="false" android:layout_marginEnd="20dp" app:layout_constraintBaseline_toBaselineOf="@+id/exo_position" app:layout_constraintEnd_toEndOf="0"/>
                    <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="@android:color/white" android:layout_gravity="center" android:id="@+id/time_left" android:paddingLeft="4dp" android:paddingRight="4dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="30dp" android:minWidth="50dp" android:includeFontPadding="false" android:layout_marginEnd="20dp" app:layout_constraintBaseline_toBaselineOf="@+id/exo_position" app:layout_constraintEnd_toEndOf="0"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <HorizontalScrollView android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                        <ImageButton android:id="@+id/player_lock" android:src="@drawable/video_locked" android:text="@string/video_lock" app:iconSize="@dimen/control_icon_size" style="@style/VideoButton"/>
                        <LinearLayout android:orientation="horizontal" android:id="@+id/player_lock_holder" android:descendantFocusability="afterDescendants" android:layout_width="wrap_content" android:layout_height="match_parent">
                            <ImageButton android:id="@+id/player_rotate_btt" android:src="@drawable/screen_rotation" android:text="@string/rotate_video" style="@style/VideoButton"/>
                            <ImageButton android:id="@+id/player_resize_btt" android:src="@drawable/ic_baseline_resize_fit_24" android:text="@string/video_aspect_ratio_resize" style="@style/VideoButton"/>
                            <ImageButton android:id="@+id/player_speed_btt" android:src="@drawable/ic_baseline_speed_24" style="@style/VideoButton"/>
                            <ImageButton android:id="@+id/player_subtitle_btt" android:visibility="gone" android:src="@drawable/ic_outline_subtitles_24" android:text="@string/subtitle_offset" style="@style/VideoButton"/>
                            <ImageButton android:id="@+id/player_audio_btt" android:visibility="gone" android:src="@drawable/ic_audio_24dp" android:text="@string/exo_audio" style="@style/VideoButton"/>
                            <ImageButton android:id="@+id/player_sources_btt" android:visibility="gone" android:src="@drawable/ic_baseline_link_24" android:text="@string/video_source" style="@style/VideoButton"/>
                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</FrameLayout>
