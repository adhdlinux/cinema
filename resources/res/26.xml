<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:screenOrientation="landscape" android:orientation="vertical" android:id="@+id/player_holder" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:id="@+id/piphide" android:layout_width="match_parent" android:layout_height="match_parent">
