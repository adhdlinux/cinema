            </LinearLayout>
            <FrameLayout android:id="@+id/player_top_holder" android:layout_width="match_parent" android:layout_height="match_parent">
                <LinearLayout android:orientation="vertical" android:id="@+id/player_title_holder" android:paddingTop="20dp" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="80dp" android:layout_marginEnd="80dp" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toTopOf="0">
                    <TextView android:textColor="@color/white" android:gravity="center" android:id="@+id/player_media_source_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="2.5dp"/>
                    <TextView android:textStyle="bold" android:textColor="@color/white" android:gravity="center" android:id="@+id/player_video_title" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                </LinearLayout>
                <androidx.mediarouter.app.MediaRouteButton android:layout_gravity="end" android:id="@+id/player_media_route_button" android:visibility="gone" android:layout_width="70dp" android:layout_height="70dp" android:layout_margin="5dp" android:mediaRouteTypes="user" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toTopOf="0"/>
                <FrameLayout android:id="@+id/player_go_back_holder" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0">
