                    <ImageView android:id="@+id/player_progressbar_right_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="220dp" android:src="@drawable/ic_baseline_brightness_7_24" android:layout_centerHorizontal="true" app:tint="@android:color/white"/>
                    <ProgressBar android:layout_gravity="right|center_vertical|center_horizontal|center|end" android:id="@+id/player_progressbar_right" android:layout_width="5dp" android:layout_height="150dp" android:max="100" android:progress="100" android:indeterminate="false" android:progressDrawable="@drawable/progress_drawable_vertical" android:layout_centerInParent="true" android:layout_marginEnd="40dp" style="@style/Widget.Material.ProgressBar.Horizontal"/>
