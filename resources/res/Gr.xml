<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center_vertical" android:orientation="vertical" android:background="@color/theme_primary_dark" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView android:id="@+id/update_img_dialog" android:layout_width="match_parent" android:layout_height="wrap_content" android:adjustViewBounds="true" android:layout_weight="8" app:srcCompat="@drawable/placeholder_movie_details_image"/>
    <TextView android:textSize="18sp" android:textColor="@color/body_text_white" android:id="@+id/update_text_dialog" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="Please update final version to save your movies and update new server" android:layout_weight="1" android:textAllCaps="false" android:textAlignment="center"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
        <Button android:id="@+id/update_cancel_dialog_btn" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Cancel" android:layout_weight="1"/>
        <Button android:id="@+id/update_ok_dialog_btn" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Install" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
